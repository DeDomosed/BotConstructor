<Page x:Class="BotConstructor.FAQEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BotConstructor"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="FAQEditorPage">

    <Grid Margin="0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <Button Content="←"
                Click="BackButton_Click"
                DockPanel.Dock="Left"/>

            <Button Content="➕"
                Click="AddQuestion_Click"
                DockPanel.Dock="Right"/>

            <TextBlock Text="FAQ"
                   FontSize="20"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10,0"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Name="QuestionListPanel" />
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Width="360">
            <Button Content="Сохранить"
                Width="360" Height="35"
                Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
