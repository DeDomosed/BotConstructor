<Window x:Class="BotConstructor.CreateBot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotConstructor"
        mc:Ignorable="d"
        Title="CreateBot" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Viewbox>
        <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <Button Content="←"
                    Width="30" Height="30"
                    Name="BackButton"
                    Click="BackButton_Click"/>
            <TextBox Name="BotNameTextBox"
                     Width="300"
                     Height="30"
                     Margin="10,0,0,0"
                     FontSize="14"
                     Text="Введите имя бота"
                     Foreground="Gray"
                     GotFocus="BotNameTextBox_GotFocus"
                     LostFocus="BotNameTextBox_LostFocus"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Выберите возможности бота:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox Name="FunctionList" BorderThickness="0" SelectionMode="Single">
                <ListBoxItem MouseLeftButtonUp="FunctionItem_Click">
                    <StackPanel Orientation="Horizontal">
                            <CheckBox Name="FAQCheckBox" Margin="0,0,10,0" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"
                                      Content="FAQ (часто задаваемые вопросы)"/>
                        </StackPanel>
                </ListBoxItem>

                <ListBoxItem MouseLeftButtonUp="FunctionItem_Click">
                    <StackPanel Orientation="Horizontal">
                            <CheckBox Name="FormCheckBox" Margin="0,0,10,0" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"
                                      Content="Форма для заказов / заявок"/>
                        </StackPanel>
                </ListBoxItem>

                <ListBoxItem MouseLeftButtonUp="FunctionItem_Click">
                    <StackPanel Orientation="Horizontal">
                            <CheckBox Name="ClientsCheckBox" Margin="0,0,10,0" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"
                                      Content="База клиентов"/>
                        </StackPanel>
                </ListBoxItem>
            </ListBox>
        </StackPanel>
    </Grid>
    </Viewbox>
</Window>
